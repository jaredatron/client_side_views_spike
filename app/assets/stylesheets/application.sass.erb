@import "compass/utilities"
@import "compass/reset"

// import everything
<% root = Pathname(File.expand_path('../',__FILE__)) %>
<% Dir[root.join('{components,layouts,pages}/**/*')].each do |file| %>
  <% file = Pathname.new(file) %>
  <% if file.file? %>
@import "<%= file.relative_path_from(root) %>"
  <% end %>
<% end %>

